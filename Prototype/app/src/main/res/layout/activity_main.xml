<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?android:buttonBarStyle"
        android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">


        <!-- Row 1 with single column -->

        <!-- Row 2 with 3 columns -->


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="?android:buttonBarButtonStyle"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/Button01" android:text="@string/button1"
                    android:layout_weight="1" android:background="#dcdcdc"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:padding="20dip" android:gravity="center"
                    android:onClick="createNewActivity"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/Button02" android:text="@string/button2"
                    android:layout_weight="1" android:background="#d3d3d3"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:padding="20dip" android:gravity="center"
                    android:onClick="createNotification"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                    <Button
                    android:id="@+id/Button03" android:text="@string/button3"
                    android:layout_weight="1" android:background="#cac9c9"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:padding="20dip" android:gravity="center"
                    android:onClick="addStuff"
                    style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

            </LinearLayout>

        </TableRow>

        <!-- Row 3 with 2 columns -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            style="?android:buttonBarButtonStyle"
            >

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/Button04" android:text="@string/button4"
                    android:layout_weight="1"  android:background="#e8d25a"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:padding="18dip" android:gravity="center"
                    android:onClick="checkPermissionsNotificationListener"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/Button08" android:text="@string/button8"
                    android:layout_weight="1"  android:background="#d96218"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:padding="18dip" android:gravity="center"
                    android:onClick="checkPermissionsUsageStat"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            style="?android:buttonBarButtonStyle"
            >

            <Button
                android:id="@+id/Button06" android:text="@string/button6"
                android:layout_weight="1"  android:background="#61b241"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:padding="18dip" android:gravity="center"
                android:onClick="exportDb"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            style="?android:buttonBarButtonStyle"
            >

            <TextView
                android:id="@+id/Button05" android:text="@string/button5"
                android:layout_weight="1" android:background="#a09f9f"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:padding="18dip" android:gravity="center"
                android:onClick="gatherLogs"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </TableRow>






        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            style="?android:buttonBarButtonStyle"
            >

            <Button
                android:id="@+id/Button09" android:text="@string/button9"
                android:layout_weight="1"  android:background="#b0b0b0"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:padding="18dip" android:gravity="center"
                android:onClick="info"
                style="?android:attr/buttonBarButtonStyle"
                />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            style="?android:buttonBarButtonStyle"
            >

            <Button
                android:id="@+id/Button07" android:text="@string/button7"
                android:layout_weight="1"  android:background="#b0b0b0"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:padding="18dip" android:gravity="center"
                android:onClick="usageStatTest"
                style="?android:attr/buttonBarButtonStyle"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="2">
            >


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">

                <View android:id="@+id/fakeView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:hint="@string/userID"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingRight="8dp"
                    android:layout_alignRight="@id/fakeView"
                    android:layout_alignParentLeft="true"
                    />

                <Button
                    android:id="@+id/Button10" android:text="@string/button10"
                    android:background="#b0b0b0"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:onClick="setName"
                    android:layout_alignLeft="@id/fakeView"
                    android:layout_alignParentRight="true"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingRight="20dp"
                    />

            </RelativeLayout>


        </TableRow>

    </TableLayout>
</ScrollView>